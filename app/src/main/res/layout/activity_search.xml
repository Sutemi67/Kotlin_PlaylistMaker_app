<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="@dimen/iconSize_topScreen"
            android:layout_height="@dimen/iconSize_topScreen"
            android:layout_marginStart="@dimen/margin_mainScreen_common_left"
            android:layout_marginEnd="@dimen/margin_mainScreen_common_left"
            android:contentDescription="@string/description_search_icon"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/margin_screenHeader_common_top"
            android:text="@string/search_activity" />
    </Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_mainScreen_common_left"
        android:layout_marginEnd="@dimen/margin_mainScreen_common_left"
        android:background="@drawable/shapes_search"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/description_search_icon"
            android:src="@drawable/ic_search_light"
            app:tint="@color/YP_light_gray_text" />

        <EditText
            style="@style/SettingsMenuButtons"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:backgroundTint="@color/Transparent"
            android:hint="@string/search_activity"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>
</LinearLayout>