<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/add_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_playlist_button"
        app:layout_constraintBottom_toBottomOf="@+id/play_button_audioplayer"
        app:layout_constraintEnd_toStartOf="@+id/play_button_audioplayer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/from_left_24dp"
        app:layout_constraintTop_toTopOf="@+id/play_button_audioplayer" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like_button"
        app:layout_constraintBottom_toBottomOf="@+id/play_button_audioplayer"
        app:layout_constraintEnd_toStartOf="@+id/from_right_24dp"
        app:layout_constraintStart_toEndOf="@+id/play_button_audioplayer"
        app:layout_constraintTop_toTopOf="@+id/play_button_audioplayer" />

    <ImageView
        android:id="@+id/play_button_audioplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/button_play_audioplayer"
        app:layout_constraintTop_toBottomOf="@+id/ArtistName"
        tools:layout_editor_absoluteX="155dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/from_left_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/from_right_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/from_left_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/from_right_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="2:2"
        app:layout_constraintEnd_toStartOf="@id/from_right_24dp"
        app:layout_constraintStart_toStartOf="@id/from_left_24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:srcCompat="@drawable/img_placeholder" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/Transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/TrackName"
        android:layout_width="0dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toStartOf="@id/from_right_24dp"
        app:layout_constraintStart_toStartOf="@id/from_left_24dp"
        app:layout_constraintTop_toBottomOf="@+id/cover"
        android:gravity="center_vertical"
        tools:text="Remastered (2009)" />

    <TextView
        android:id="@+id/ArtistName"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/from_right_24dp"
        app:layout_constraintStart_toStartOf="@id/from_left_24dp"
        app:layout_constraintTop_toBottomOf="@+id/TrackName"
        tools:text="The Beatles" />
</androidx.constraintlayout.widget.ConstraintLayout>