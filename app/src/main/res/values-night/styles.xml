<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BG_color">
        <item name="android:background">@color/YP_black</item>
    </style>

    <style name="BG_icons">
        <item name="android:tint">@color/YP_white</item>
    </style>

    <style name="icons_main">
        <item name="tint">@color/YP_white</item>
        <item name="backgroundTint">@color/Transparent</item>
    </style>

    <style name="editTextElements">
        <item name="tint">@color/YP_black</item>
        <item name="backgroundTint">@color/Transparent</item>
        <item name="android:textColorHint">@color/YP_black</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="errorText">
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="reloadButton">
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TracksNames">
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TracksArtists">
        <item name="android:textColor">@color/YP_light_gray_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsMenuButtons">
        <item name="android:layout_height">@dimen/height_common_list_element</item>
        <item name="android:layout_marginStart">@dimen/margin_mainScreen_common_left</item>
        <item name="android:layout_marginEnd">@dimen/margin_settingScreen_common_right</item>
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">4dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="history_hint">
        <item name="android:text">Вы искали</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/YP_white</item>
    </style>

    <style name="clearHistoryButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/YP_black</item>
    </style>

    <style name="playbutton">
        <item name="android:tint">@color/YP_white</item>
    </style>

    <style name="sidebutton">
        <item name="android:tint">@color/YP_white</item>
    </style>
</resources>